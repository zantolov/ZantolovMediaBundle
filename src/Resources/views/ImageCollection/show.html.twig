{% extends 'ZantolovMediaBundle::baseAdmin.html.twig' %}

    {% block body -%}
        <h1>{% trans %}Image Collection{% endtrans %}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}Created at{% endtrans %}</th>
                <td>{{ entity.createdAt|date(defaultDateTimeFormat) }}</td>
            </tr>
            <tr>
                <th>{% trans %}Updated at{% endtrans %}</th>
                <td>{{ entity.updatedAt|date(defaultDateTimeFormat) }}</td>
            </tr>
            </tbody>
        </table>

        {% for image in entity.images %}
            f
            {{ image.imageName }}
        {% endfor %}

        <ul class="list-inline">
            <li>
                <a class="btn btn-primary" href="{{ path('media.image-collection') }}">
                    <i class="fa fa-arrow-left"></i> {% trans %}Back to the list{% endtrans %}
                </a>
            </li>
            <li>
                <a class="btn btn-primary"
                   href="{{ path('media.image-collection.edit', { 'id': entity.id }) }}">
                    <i class="fa fa-edit"></i> {% trans %}Edit{% endtrans %}
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    {% endblock %}
