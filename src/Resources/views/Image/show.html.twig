{% extends 'ZantolovMediaBundle::baseAdmin.html.twig' %}

    {% block body -%}
        {% embed 'ZantolovAppBundle:Admin/partials:crudHeader.html.twig'  with { ignoreTabs: ["filters"]} %}
            {% block entityTitle %}Image{% endblock %}

            {% block actionPanel %}
                <ul class="list-inline">
                    <li>
                        <a class="btn btn-primary btn-sm" href="{{ path('zantolov.media.image.index') }}">
                            <i class="fa fa-arrow-left"></i> Back to the list
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-primary btn-sm"
                           href="{{ path('zantolov.media.image.edit', { 'id': entity.id }) }}">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>
            {% endblock %}
        {% endembed %}

        <div class="row">
            <div class="col-md-5">
                <div class="imagePreview text-center">
                    <img class="img-thumbnail"
                         src="{{ zantolov_uploader_asset(entity, 'imageFile', null, false) | imagine_filter('bigAdminVariation') }}"/>
                </div>
            </div>
            <div class="col-md-7">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Image name{% endtrans %}</th>
                        <td>{{ entity.imageName }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Created at{% endtrans %}</th>
                        <td>{{ entity.createdAt|date(defaultDateTimeFormat) }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Updated at{% endtrans %}</th>
                        <td>{{ entity.updatedAt|date(defaultDateTimeFormat) }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Active{% endtrans %}</th>
                        <td>{{ entity.active|fontAwesome() }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

    {% endblock %}
