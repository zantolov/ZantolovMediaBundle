{% extends 'ZantolovMediaBundle::baseAdmin.html.twig' %}

    {% block body -%}
        <h1>Image list</h1>

        {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "media.image."} %}

        <table class="table dataTable">
            <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Image name</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('media.image.show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                    </td>
                    <td>
                        <a href="{{ path('media.image.show', { 'id': entity.id }) }}">
                            <img src="{{ zantolov_uploader_asset(entity, 'imageFile', null, false) | imagine_filter('thumb') }}"/>
                        </a>
                    </td>
                    <td>{{ entity.imageName }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date(defaultDateTimeFormat) }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date(defaultDateTimeFormat) }}{% endif %}</td>
                    <td>{{ entity.active|fontAwesome() }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a class="btn btn-primary"
                                   href="{{ path('media.image.show', { 'id': entity.id }) }}">
                                    show
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-primary"
                                   href="{{ path('media.image.edit', { 'id': entity.id }) }}">
                                    edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "media.image."} %}        {% endblock %}
