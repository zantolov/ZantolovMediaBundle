{% extends 'ZantolovMediaBundle::baseAdmin.html.twig' %}


    {% block body -%}
        <h1>Slider list</h1>

        {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "zantolov.media.slider."} %}

        <table class="table dataTable">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('zantolov.media.slider.show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                    </td>
                    <td>{{ entity.name }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date(defaultDateTimeFormat) }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date(defaultDateTimeFormat) }}{% endif %}</td>
                    <td>{{ entity.active|fontAwesome() }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a class="btn btn-primary"
                                   href="{{ path('zantolov.media.slider.show', { 'id': entity.id }) }}">
                                    show
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-primary"
                                   href="{{ path('zantolov.media.slider.edit', { 'id': entity.id }) }}">
                                    edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% include 'ZantolovAppBundle:SensioGeneratorBundle:partials/CRUD/indexLinks.html.twig' with {entityPrefix: "zantolov.media.slider."} %}        {% endblock %}
